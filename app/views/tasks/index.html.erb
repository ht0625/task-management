<h2>タスク一覧</h2>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先度でソートする", tasks_path(sort_priority: "true") %>
<%= form_with(scope: :task,url: tasks_path, method: :get, local: true) do |f| %>
  <%= f.label :name_key, 'タスク名' %>
  <%= f.text_field :name_key %>
  <%= f.label :status_key, 'ステータス' %>
  <%= f.select :status_key, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択なし" %>
  <%= f.submit '検索' %><br>
<% end %>

<%= link_to "新規登録", new_task_path %>

<table>
  <tr>
    <th>タスク名<th>
    <th>内容<th>
    <th>期限<th>
    <th>ステータス<th>
    <th>優先度<th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <div class = "task">
      <td><%= task.name %></td>
      <td><%= task.content %></td>
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to "詳細", task_path(task.id) %></td>
      <td><%= link_to "編集", edit_task_path(task.id) %></td>
      <td><%= link_to "削除", task_path(task.id), method: :delete, data: { confirm: '削除しますか？' }  %></td>
    </div>
  </tr>
  <% end %>
</table>

<%= paginate @tasks %>
