<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p class="header-logo">Task_Management</p>
      <div class="header-link">
        <%= link_to "タスク一覧", tasks_path %>
        <%= link_to "タスク登録", new_task_path %>
        <% if logged_in? %>
          <%= link_to "プロフィール", user_path(current_user.id) %>
          <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
          <% if current_user.admin? %>
            <%= link_to "管理者画面", admin_users_path %>
          <% end %>
         <% else %>
           <%= link_to "新規登録", new_user_path %>
           <%= link_to "ログイン", new_session_path %>
         <% end %>
      </div>
    </header><br>
    <%= notice %><br>
    <div class ="wrapper">
      <%= yield %>
    </div>
  </body>
</html>
